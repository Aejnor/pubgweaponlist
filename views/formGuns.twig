{% extends "layout.twig" %}

{% block css %}
    <link rel="stylesheet" href="{{ '' | url }}css/bootstrap-tokenfield.min.css">
{% endblock %}

{% block content %}
<div class="container">
    <h1>{{ webInfo.h1 }}</h1>
    <form method="post">

        <div class="row">
            <div class="col-lg-6">
                <div class="form-group  {%  if errors['nombre'] %}has-error{% endif %}">
                    <label for="inputNombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Gun Name" value="{{ gun.nombre }}">
                </div>
                {{ generateAlert(errors, 'nombre') }}
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="inputImagen">Imagen</label>
                    <input type="text" class="form-control" id="inputImagen" name="imagen" placeholder="Gun Image URL" value="{{ gun.imagen }}">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="form-group">
                <label for="inputBalas">Balas</label>
                <input type="text" class="form-control" id="inputBalas" name="balas" placeholder="Balas" value="{{ gun.balas }}">
            </div>
        </div>

        <div class="form-group {% if errors['calibre'] %}has-error{% endif %}">
            <label for="inputCalibre">Calibre</label>
            <input type="text" class="form-control" id="inputCalibre" name="calibre" value="{{ gun.calibre }}">
        </div>
        {{  generateAlert(errors, 'calibre') }}


        <div class="form-group {% if errors['tipo'] %}has-error{% endif %}">
            <label for="inputTipo">Tipo</label>
            <input type="text" class="form-control" id="inputTipo" name="tipo" value="{{ gun.tipo }}">
        </div>
        {{  generateAlert(errors, 'tipo') }}


        <div class="form-group {% if errors['retroceso'] %}has-error{% endif %}">
            <label for="inputRetroceso">Retroceso</label>
            <input type="text" class="form-control" id="inputRetroceso" name="retroceso" value="{{ gun.retroceso }}">
        </div>
        {{  generateAlert(errors, 'retroceso') }}


        <input type="hidden" name="_method" value="{{ webInfo.method }}">
        <button type="submit" class="btn btn-default">{{ webInfo.submit }}</button>
    </form>
</div><!-- /.container -->
{% endblock %}

{% block js %}
    <script src="{{ '' | url }}js/bloodhound/bloodhound.js"></script>
    <script src="{{ '' | url }}js/typehead/typehead.js"></script>
    <script src="{{ '' | url }}js/tokenfield/bootstrap-tokenfield.min.js"></script>
    <script src="{{ '' | url }}js/tokenfield/tokenfield-gunsada.js"></script>
{% endblock %}