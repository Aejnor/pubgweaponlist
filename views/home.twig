{% extends 'layout.twig' %}

{% block css %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.0.6/sweetalert2.min.css" />
{% endblock %}

{% block content %}
<div class="container">
    <h1>PUBG APP</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Calibre</th>
            <th>Tipo</th>
            <th>Balas</th>
            <th>Retroceso</th>
            <th>Editar</th>
            <th>Borrar</th>
        </tr>
        </thead>
        <tbody>
        {% for gun in guns %}
        <tr>
            <td><a href="guns/{{ gun.id }}"><img src="{{ gun.imagen }}" height="150" width="130" alt="Foto de{{ gun.nombre }}"></a></td>
            <td><a href="guns/{{ gun.id }}">{{ gun.nombre }}</a></td>
            <td>{{ gun.calibre }}</td>
            <td>{{ gun.tipo }}</td>
            <td>{{ gun.balas }}</td>
            <td>{{ gun.retroceso }}</td>
            <td>
                <a href="/guns/edit/{{ gun.id }}" class="editar btn btn-link">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <form action="/guns" method="POST" id="deleteGun-{{ gun.id }}">
                    <input type="hidden" name="id" value="{{ gun.id }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" id="deleteForm" class="btn btn-link btn-alert" onclick="deleteGun({{ gun.id }})"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                </form>
            </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
</div><!-- /.container -->
{% endblock %}

{% block js %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.0.6/sweetalert2.min.js"></script>
<script src="{{  '' | url }}js/app.js"></script>
{% endblock %}
